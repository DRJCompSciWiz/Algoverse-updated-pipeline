<mujoco model="22.1">
  <!-- Set gravity -->
  <option gravity="0 0 -9.81"/>

  <!-- Worldbody contains all bodies -->
  <worldbody>

    <!-- Ramp Body (Using a box instead of a mesh) -->
    <body name="curved_ramp" pos="0 0 0">
      <geom type="box" size="5 10 0.1" rgba="0.6 0.4 0.2 1" friction="1.2 1.2 1.2"/>
    </body>

    <!-- Surface Body -->
    <body name="surface" pos="-10 0 -10">
      <geom type="plane" size="25 25 0.1" rgba="0.8 0.8 0.8 1" friction="1 1 1"/>
    </body>

    <!-- Sphere Body -->
    <body name="sphere" pos="-5 0 1">
      <geom type="sphere" size="0.4" density="1" friction="0.8 0.8 0.8" rgba="0.1 0.7 0.7 1"/>
      <joint name="sphere_joint" type="free"/>
    </body>

    <!-- Cube Body -->
    <body name="cube" pos="5 0 1">
      <geom type="box" size="0.5 0.5 0.5" density="1" friction="0 0 0" rgba="0.7 0.1 0.7 1"/>
      <joint name="cube_joint" type="free"/>
    </body>

  </worldbody>



</mujoco>
