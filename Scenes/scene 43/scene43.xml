<mujoco>
  <option gravity="0 0 -9.81"/>
  <worldbody>
    <light diffuse="0.5 0.5 0.5" pos="0 0 5" dir="0 0 -1"/>
    
    <!-- Big Ground Plane -->
    <body name="ground" pos="0 0 -10">
      <geom type="plane" size="50 50 0.1" rgba="0.7 0.7 0.7 1" friction="1 1 1"/>
    </body>

    <!-- Rough Incline -->
    <body name="rough_incline" pos="-5 0 0">
      <geom type="plane" size="5 10 0.1" rgba="1 0.5 0.5 1" friction="1.0 1.0 1.0" quat="0.5 0.866 0 0"/>
    </body>

    <!-- Smooth Incline -->
    <body name="smooth_incline" pos="5 0 0">
      <geom type="plane" size="5 10 0.1" rgba="0.5 0.5 1 1" friction="0.1 0.1 0.1" quat="0.5 0.866 0 0"/>
    </body>

    <!-- Block on Rough Incline -->
    <body name="block_rough" pos="-5 0 2">
      <geom type="box" size="0.5 0.5 0.5" density="500" rgba="0 1 0 1"/>
      <joint type="free"/>
    </body>

    <!-- Block on Smooth Incline -->
    <body name="block_smooth" pos="5 0 2">
      <geom type="box" size="0.5 0.5 0.5" density="500" rgba="1 1 0 1"/>
      <joint type="free"/>
    </body>
  </worldbody>
</mujoco>
